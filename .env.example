# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Trumpow (TRMP) RPC Configuration
TRMP_RPC_HOST=localhost
TRMP_RPC_PORT=22555
TRMP_RPC_USER=your_rpc_username
TRMP_RPC_PASSWORD=your_rpc_password
TRMP_RPC_WALLET=tipbot

# Database Configuration
DATABASE_URL=sqlite:///trmp_tipbot.db
# For PostgreSQL in production: DATABASE_URL=postgresql://user:password@host:port/database

# Bot Settings
DEBUG=True
WEBHOOK_URL=https://your-domain.com
WEBHOOK_PORT=8443

# Fee Configuration
FEE_ADDRESS=your_trmp_fee_address_here
FEE_PERCENTAGE=0.01
MINIMUM_TIP=1.0
MAXIMUM_TIP=10000.0

# Admin Configuration
ADMIN_USERNAMES=your_telegram_username

# Logging
LOG_LEVEL=INFO