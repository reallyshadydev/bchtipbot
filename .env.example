# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Trumpow RPC Configuration
TRMP_RPC_HOST=localhost
TRMP_RPC_PORT=22555
TRMP_RPC_USER=your_rpc_username
TRMP_RPC_PASSWORD=your_rpc_password
TRMP_RPC_WALLET=tipbot

# Bot Settings
DEBUG=True
MINIMUM_TIP=1.0
MAXIMUM_TIP=10000.0
WITHDRAWAL_FEE=0.1
CONFIRMATION_BLOCKS=3

# Database Configuration
DATABASE_PATH=./tip_bot.db

# Security Settings
RATE_LIMIT_TIPS_PER_HOUR=10
RATE_LIMIT_WITHDRAWALS_PER_DAY=5
MAX_DAILY_WITHDRAWAL=1000.0

# Admin Configuration (comma separated usernames without @)
ADMIN_USERNAMES=your_telegram_username

# Logging
LOG_LEVEL=INFO
LOG_FILE=./tip_bot.log

# Optional: Custom messages
WELCOME_MESSAGE=Welcome to the Trumpow Tip Bot! Use /help to get started.
HELP_MESSAGE=Use /balance to check your balance, /tip to send TRMP to others, /deposit to get your address.